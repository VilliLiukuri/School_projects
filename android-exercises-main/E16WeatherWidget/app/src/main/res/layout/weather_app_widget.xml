<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.E16WeatherWidget.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.E16WeatherWidget.AppWidgetContainer">

    <TextView
        android:id="@+id/cityTextView"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/city"
        android:textColor="#546E7A"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/condTextView"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@id/cityTextView"
        android:text="@string/cond"
        android:textColor="#546E7A"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/tempTextView"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@id/condTextView"
        android:paddingEnd="10dp"
        android:text="@string/temp"
        android:textColor="#546E7A"
        tools:ignore="RtlSymmetry,TextSizeCheck" />

    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@id/tempTextView"
        android:text="@string/time"
        android:textColor="#546E7A"
        tools:ignore="TextSizeCheck" />

    <ImageView
        android:id="@+id/iconImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tempTextView"
        android:contentDescription="TODO" />

    <ImageView
        android:id="@+id/refreshImageView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/baseline_360_24"
        android:layout_below="@+id/timeTextView"/>

</RelativeLayout>
